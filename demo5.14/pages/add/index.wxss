/* pages/add/index.wxss */
@import "../../lib/formLogin.wxss";
.label-text{
  text-align: center;
  margin-top: 5%;
}
.login-box{
  margin-top: 5%;
  padding: 2% 5% 2% 5%;
  background-color: white;
  border-radius: 25rpx;
  box-shadow: 2rpx 2rpx 2rpx 2rpx#888888;
}
.login-box>input{
  /* 上右下左 */
  margin: 2% 0 2% 0;
  border-bottom: 4rpx solid lightgray;
  border-top: 4rpx solid lightgray;
  border-left: 4rpx solid lightgray;
  border-right: 4rpx solid lightgray;
}
.login-btn{
  margin: 5%;
}

.btn {
  width: 100%!important;
  background-color: #008000;
  color: white;
  font-weight: normal;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.head {
margin-top: 10%;
margin-left:30%;
overflow: hidden;
border-radius: 100%;
width: 200rpx;
height: 200rpx;
border: 4rpx solid #fff5f7;
line-height: 200rpx;
/* color: #fff5f7; */
color: white;
}